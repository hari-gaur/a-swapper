<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<ScrollView android:id="@+id/ScrollView02"
		android:layout_width="fill_parent" android:layout_gravity="center"
		android:layout_height="260px">
		<TableLayout android:id="@+id/TableLayout01"
			android:layout_gravity="center" android:layout_height="fill_parent"
			android:layout_width="wrap_content">
			<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView01"
					android:layout_height="wrap_content" android:text="Swap control"
					android:layout_width="fill_parent" android:textSize="22px"></TextView>
			</TableRow>
			<TableRow android:id="@+id/TableRow01"
				android:layout_height="60px" android:layout_gravity="center"
				android:layout_width="fill_parent">
				<Button android:id="@+id/SwapOn_32" android:text="Swap ON (32 MB)"
					android:layout_height="fill_parent" android:layout_width="fill_parent"></Button>
				<Button android:id="@+id/SwapOff" android:text="Swap OFF"
					android:layout_width="fill_parent" android:layout_height="fill_parent"></Button>
			</TableRow>
			<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView01"
					android:layout_height="wrap_content" android:layout_width="fill_parent"
					android:textSize="22px" android:text="Swapiness"></TextView>
			</TableRow>
			<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content"
				android:layout_height="60px" android:layout_gravity="center">
				<LinearLayout android:id="@+id/SwappinessLayout"
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<Button android:id="@+id/GetSwappiness"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="Get"></Button>
					<EditText android:layout_height="wrap_content"
						android:text="0" android:singleLine="true" android:saveEnabled="true"
						android:maxLength="3" android:layout_width="wrap_content"
						android:ellipsize="none" android:id="@+id/Swappiness"></EditText>
					<Button android:id="@+id/SetSwappiness"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="Set"></Button>
				</LinearLayout>
				<Button android:id="@+id/SetSwappiness10"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Set 10"></Button>
			</TableRow>
			<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView01"
					android:layout_height="wrap_content" android:layout_width="fill_parent"
					android:textSize="22px" android:text="Configuration"></TextView>
			</TableRow>
			<TableRow android:id="@+id/TableRow03"
				android:layout_height="60px" android:layout_gravity="center"
				android:layout_width="fill_parent">
				<Button android:id="@+id/GetInfo" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Get information"></Button>
				<Button android:text="Settings" android:id="@+id/StartSettings"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			</TableRow>
		</TableLayout>
	</ScrollView>
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/LogText" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
	</ScrollView>
</LinearLayout>
